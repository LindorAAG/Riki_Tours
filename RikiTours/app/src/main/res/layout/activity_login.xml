<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="za.co.whcb.tp2.rikitours.LoginActivity"
    android:background="#362720"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:padding="0dp"
        android:scrollIndicators="none"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:textAlignment="textEnd"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:src="@drawable/logo2"
                android:paddingBottom="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="10dp">

                <EditText
                    style="@style/edit_text_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/edtEmail"
                    android:hint="  Email Address"
                    android:background="@drawable/text_box_sharp"
                    android:drawableLeft="@drawable/user_profile"
                    />

                <EditText
                    style="@style/edit_text_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edtPassword"
                    android:hint=" Password"
                    android:background="@drawable/text_box_sharp"
                    android:drawableLeft="@drawable/password"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Login with your RikiTours account or create one"
                    android:id="@+id/textView4"
                    android:textAlignment="center"
                    android:textColor="@color/bright_foreground_disabled_material_dark"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="if you don&apos;t have"
                    android:id="@+id/textView5"
                    android:textAlignment="center"
                    android:textColor="@color/bright_foreground_disabled_material_dark"
                    android:paddingBottom="6dp"
                    android:paddingTop="2dp"
                    android:textSize="12dp" />

                <Button
                    style="@style/button_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:id="@+id/button2"
                    android:background="@drawable/button_sharp"
                    android:textColor="#FFFFFF"
                    android:onClick="login"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:id="@+id/textView3"
                    android:textAlignment="center"
                    android:textColor="@color/bright_foreground_disabled_material_dark"
                    android:paddingBottom="0.6dp"
                    android:paddingTop="0.6dp"
                    android:textSize="20dp" />

                <Button
                    style="@style/button_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:id="@+id/button3"
                    android:background="@drawable/button_sharp"
                    android:textColor="#FFFFFF"
                    android:onClick="register"
                    android:nestedScrollingEnabled="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms And Conditions"
                    android:id="@+id/textView6"
                    android:textAlignment="center"
                    android:textColor="@color/bright_foreground_disabled_material_dark"
                    android:paddingBottom="2dp"
                    android:paddingTop="10dp"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Visite Our Website"
                    android:id="@+id/textView7"
                    android:textAlignment="center"
                    android:textColor="@color/bright_foreground_disabled_material_dark"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:textSize="12dp"
                    android:autoLink="web" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
