<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".views.MenuActivity"
        android:gravity="center_vertical"
        android:background="@drawable/menubg2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="DISCOVERY TOURS"
                    android:id="@+id/btnTours"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/point_icon"
                    android:drawableRight="@drawable/logo_2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:onClick="listAttractions"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="CAR RENTAL"
                    android:id="@+id/btnCarRental"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/car_icon"
                    android:drawableRight="@drawable/logo_2"

                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:onClick="listVehicles"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ACCOMMODATION"
                    android:id="@+id/btnAccomodation"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/bed_icon"
                    android:drawableRight="@drawable/logo_2"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:onClick="listAccommodations"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:id="@+id/button4"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/help_icon"
                    android:drawableRight="@drawable/logo_2"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="About Riki"
                    android:id="@+id/button5"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/riki_bout_1"
                    android:drawableRight="@drawable/logo_2"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="About App"
                    android:id="@+id/button6"
                    android:background="@drawable/menu_button"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/riki_bout_1"
                    android:drawableRight="@drawable/logo_2"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:paddingBottom="10dp"
        android:paddingRight="10dp" />
</android.support.v4.widget.DrawerLayout>
