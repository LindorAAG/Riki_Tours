<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content" android:background="#362720">

            <gradient
                android:angle="270"
                android:background="#362720"
                android:startColor="#362720"
                android:centerColor="#362720"
                android:endColor="#362720"
                />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#a9978f" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">

            <gradient
                android:angle="270"
                android:startColor="#56443b"
                android:endColor="#56443b"
                />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#56443b" />

        </shape>
    </item>

</selector>

