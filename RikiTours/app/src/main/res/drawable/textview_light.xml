<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">
            <corners android:radius="4dp" />
            <gradient
                android:centerColor="#402f27"
                android:endColor="#402f27"
                android:startColor="#402f27"

                />
            <stroke android:width="5px" android:color="#31221c" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">

        </shape>
    </item>

</selector>